{
	"compilerOptions": {
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"jsx": "preserve",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"skipLibCheck": true,
		"allowJs": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"types": ["node"]
	},
	"compileOnSave": true,
	"include": ["src"]
}
